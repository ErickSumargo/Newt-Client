<app.newt.id.view.custom.RelativeLayoutCustom xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="56dp"
    app:maxHeight="180">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/pick_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_image"
        android:background="?selectableItemBackgroundBorderless" />

    <ImageView
        android:id="@+id/full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pick_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_fullscreen"
        android:background="?selectableItemBackgroundBorderless" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/full_screen"
        android:layout_toLeftOf="@+id/send"
        android:layout_marginRight="8dp">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:hint="Pesan..."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@android:color/transparent" />

    </ScrollView>

    <ImageView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:padding="2dp"
        android:src="@drawable/ic_send"
        android:background="@drawable/button_circle" />

</app.newt.id.view.custom.RelativeLayoutCustom>